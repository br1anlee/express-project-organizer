<h1><%= category.name %></h1>

<% if (!category.projects.length) { %>
    <h2>No projects with this category!</h2>
<% } %>


<% category.projects.forEach(project => { %>
    <div class="card">
      <div class="card-body">
          <div class="card-title"><%= project.name %></div>
      </div>
    </div>
    <hr>
  <% }) %>